<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- login customer grid button -->
    <type name="Magento\Customer\Ui\Component\Listing\Column\Actions">
        <plugin name="Dss_Login_As_Customer_Button_Grid"
            type="Dss\LoginAsCustomer\Plugin\Adminhtml\Grid\CustomerActions" sortOrder="10" />
    </type>

    <!--get frontend url-->
    <type name="Dss\LoginAsCustomer\Plugin\FrontendUrl">
        <arguments>
            <argument name="frontendUrl" xsi:type="object" shared="false">Magento\Framework\Url</argument>
        </arguments>
    </type>

</config>
